
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>



<div class="new_user_form">

  <h2>Sign up</h2>

  <div id="sign_up_error">
    <%= devise_error_messages! %>
  </div>


  <div class="field ">
    <%= f.text_field :first_name, placeholder:"First Name",class:"top",id:"first_name"%>

  </div>

  <div class="field"><%= f.text_field :last_name, placeholder:"Last Name",class:"top",id:"last_name"%></div>

  <div class="field">
    <%= f.email_field :email, placeholder:"Email Address"%>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, placeholder:"Password", autocomplete: "off",class:"bottom",id:"password"%>

  </div>
  <div class="field">  <%= f.password_field :password_confirmation, placeholder:"Password Confirmation", autocomplete: "off",class:"bottom", id:"password_confirmation" %></div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <h2>OR</h2>

  <div id="login_shared">
    <%= render "devise/shared/links" %>
  </div>

</div>

<% end %>
