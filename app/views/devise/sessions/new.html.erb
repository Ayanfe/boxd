<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div id="login_form_holder">
  <h2>Log in</h2>

  <div id="sign_up_error">
    <%devise_error_messages! %>
  </div>

  <div class="field">
    <%= f.email_field :email,placeholder:"email address" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder:"password" ,autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="field" id="remember_me">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end -%>

  <% if devise_mapping.recoverable? -%>
  <div class="field" id="forgot_password">
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>

  <div id="signup_shared">
    <h2>OR</h2>
    <%= link_to "sign up",new_registration_path(resource_name), id:"signup_shared" %>
  </div>

</div>

<% end %>
