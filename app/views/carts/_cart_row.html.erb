<div>
  <div>
    <div>
      <%= link_to (image_tag meal.image.thumb.url, id: "cart_image"), meal%>
      <h4><%= meal.name %></h4>
    </div>
    <div>

      <%= form_for order_item, remote: true do |f| %>
        <h4>Price: <span style="color: green"><%= number_to_currency order_item.unit_price %></span></h4>
        <div>
          <div>
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :meal_id, value: meal.id %>
          </div>
          <div>
            <div>
              <%= f.submit "Update Quantity"%>
              <%= link_to (image_tag "closeicon", alt: "remove from cart", id: "remove_from_cart"), order_item, { data: { confirm: "Are you sure you wish to delete the meal '#{order_item.meal.name}' from your cart?" }, method: :delete, remote: true } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
